        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TingTongApp"
        tools:targetApi="31">
        <activity
            android:name=".Views.LocationSearch"
            android:exported="false" />
        <activity
            android:name=".Views.Account_View"
            android:exported="false" />
        <activity
            android:name=".Views.PostRoom"
            android:exported="false" />
        <activity
            android:name=".Views.Main_Menu"
            android:exported="false" />
        <activity
            android:name=".Views.ResetPassword"
            android:exported="false" />
        <activity
            android:name=".Views.LoginView"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.SignupView"
            android:exported="false" />
    </application>

