<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Views.FragmentTypeRoom">

    <RadioGroup
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:buttonTint="#666666"
            android:id="@+id/rBtn_type_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại phòng" />

        <RadioButton
            android:buttonTint="#666666"
            android:id="@+id/rBtn_type1_push_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trọ" />

        <RadioButton
            android:buttonTint="#666666"
            android:id="@+id/rBtn_type2_push_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ký túc xá" />

        <RadioButton
            android:buttonTint="#666666"
            android:id="@+id/rBtn_type3_push_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chung cư" />

        <RadioButton
            android:buttonTint="#666666"
            android:id="@+id/rBtn_type4_push_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhà nguyên căn" />
    </RadioGroup>

</FrameLayout>