<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardViewRoomList"
    android:padding="0dp"
    app:cardElevation="0dp"
    android:layout_marginTop="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_room"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_room" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:text="Cho thuê phòng trọ giá rẻ"
                android:textColor="#666666"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:text="96A, Mộ Lao, Hà Đông, Hà Nội"
                android:textColor="#666666"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_timeCreated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dp"
                    android:maxLines="2"
                    android:text="10/10/2023"
                    android:textColor="#666666"
                    android:textSize="16dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <!--                <Button-->
                <!--                    android:id="@+id/btn_update"-->
                <!--                    android:layout_width="60dp"-->
                <!--                    android:layout_height="30dp"-->
                <!--                    android:drawableLeft="@drawable/ic_svg_setting_user_100"-->
                <!--                    android:background="@drawable/custom_button_delete"/>-->
                <!--                <Button-->
                <!--                    android:id="@+id/btn_delete"-->
                <!--                    android:layout_width="60dp"-->
                <!--                    android:layout_height="30dp"-->
                <!--                    android:layout_marginLeft="15dp"-->
                <!--                    android:drawableLeft="@drawable/ic_svg_delete_user_100"-->
                <!--                    android:background="@drawable/custom_button_delete"/>-->
                <!--                <Button-->
                <!--                    android:id="@+id/btn_change"-->
                <!--                    android:layout_width="60dp"-->
                <!--                    android:layout_height="30dp"-->
                <!--                    android:layout_marginLeft="15dp"-->
                <!--                    android:drawableLeft="@drawable/ic_svg_change_100"-->
                <!--                    android:background="@drawable/custom_button_delete"/>-->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
