<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cardViewRoomList"
    app:cardElevation="0dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:layout_marginTop="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:elevation="3dp"
            android:background="#9D000000"
            android:padding="1dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>

        <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_room"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="5dip"
            app:riv_oval="false" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="100dp"
            android:background="#9D000000">

            <TextView
                android:id="@+id/txt_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="5m x 4m"
                android:textColor="#ffffff"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="135dp"
            android:background="#ffffff"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/txt_timeCreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:text="10/10/2023"
                android:textColor="@android:color/darker_gray"
                android:textSize="12dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="right"
                    android:text="KÍ TÚC XÁ"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:paddingLeft="10dp"
                    android:text="2.5 triệu/phòng"
                    android:layout_alignParentRight="true"
                    android:textColor="#00BFFF"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:padding="2dp"
                    android:maxLines="1"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingRight="10sp"
                android:text="Cho thuê phòng trọ giá rẻ"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:lineSpacingExtra="3dp"/>
            <TextView
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="127 An Dương Vương, Bình Tân, TP Hồ Chí Minh"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>